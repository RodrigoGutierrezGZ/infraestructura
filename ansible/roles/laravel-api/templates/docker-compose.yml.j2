version: '3.8'

services:
  app:
    image: "{{ docker_image | default('ghcr.io/rodrigogutierrezgz/api-laravel:latest') }}"
    container_name: "{{ app_name | default('laravel-api') }}"
    ports:
      - "{{ app_port | default('8000') }}:8000"
    environment:
      - APP_ENV={{ app_env | default('production') }}
      - APP_DEBUG={{ app_debug | default('false') }}
      - APP_KEY={{ app_key }}
      - DB_CONNECTION=mysql
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_DATABASE={{ db_name | default('laravel') }}
      - DB_USERNAME={{ db_user | default('root') }}
      - DB_PASSWORD={{ db_password }}
      - CACHE_DRIVER=redis
      - QUEUE_CONNECTION=redis
      - SESSION_DRIVER=redis
      - REDIS_HOST=redis
      - REDIS_PASSWORD={{ redis_password | default('') }}
      - REDIS_PORT=6379
    depends_on:
      - mysql
      - redis
    networks:
      - laravel-network
    restart: unless-stopped
    volumes:
      - app-storage:/var/www/html/storage
      - app-logs:/var/www/html/storage/logs
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  mysql:
    image: mysql:8.0
    container_name: "{{ app_name | default('laravel-api') }}-mysql"
    environment:
      MYSQL_ROOT_PASSWORD: "{{ db_password }}"
      MYSQL_DATABASE: "{{ db_name | default('laravel') }}"
      MYSQL_USER: "{{ db_user | default('laravel_user') }}"
      MYSQL_PASSWORD: "{{ db_password }}"
    ports:
      - "{{ db_port | default('3306') }}:3306"
    volumes:
      - mysql-data:/var/lib/mysql
      - ./mysql/conf.d:/etc/mysql/conf.d:ro
    networks:
      - laravel-network
    restart: unless-stopped
    command: --default-authentication-plugin=mysql_native_password
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 30s
      timeout: 10s
      retries: 3

  redis:
    image: redis:7-alpine
    container_name: "{{ app_name | default('laravel-api') }}-redis"
    command: redis-server --appendonly yes --requirepass "{{ redis_password | default('') }}"
    ports:
      - "{{ redis_port | default('6379') }}:6379"
    volumes:
      - redis-data:/data
    networks:
      - laravel-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  laravel-network:
    driver: bridge

volumes:
  mysql-data:
    driver: local
  redis-data:
    driver: local
  app-storage:
    driver: local
  app-logs:
    driver: local