[production]
# Servidor de producci√≥n AWS EC2
production-server ansible_host=34.227.79.104 ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/laravel-deployment-key.pem

[staging]
# Servidor de staging/testing (usando misma VM para demo)
staging-server ansible_host=34.227.79.104 ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/laravel-deployment-key.pem

[development]
# Servidor de desarrollo local
localhost ansible_connection=local

[web_servers:children]
production
staging
development

[web_servers:vars]
# Variables globales para todos los servidores web
ansible_python_interpreter=/usr/bin/python3
app_name=laravel_api
app_user=laravel
app_group=laravel
app_port=8000
db_name=laravel_api
db_user=laravel